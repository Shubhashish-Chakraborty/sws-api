generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String   @id @default(cuid())
  username           String
  email              String   @unique
  contactNumber      String   @unique
  password           String
  isMailVerified     Boolean  @default(false)
  otpForVerification String   @default("")
  UserAddedAt        DateTime @default(now())
}
